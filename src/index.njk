<section class="hero text-center py-5">
  <div class="container-fluid px-0">
    <h1 class="display-4">{{ site.name }}</h1>
    <p class="h5 text-muted mb-3">by {{ site.author }}</p>
    <p class="lead">{{ site.description }}</p>
    
  </div>
</section>

