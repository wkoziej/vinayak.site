<!DOCTYPE html>
<html lang="pl" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - {{ site.name }}</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="{{ description or site.description }}">
    <meta name="keywords" content="ayurveda, panchakarma, marma therapy, prana yog, meditation, holistic healing, wellness, himalayan retreat, traditional medicine">
    <meta name="author" content="{{ site.author }}">
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="{{ title }} - {{ site.name }}">
    <meta property="og:description" content="{{ description or site.description }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:locale" content="en_IN">
    <meta property="og:image" content="{{ site.url }}/assets/images/og-image.jpg">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title }} - {{ site.name }}">
    <meta name="twitter:description" content="{{ description or site.description }}">
    <meta name="twitter:image" content="{{ site.url }}/assets/images/og-image.jpg">
    
    <!-- Favicon -->
    <link rel="icon" href="/assets/images/favicon.ico" sizes="any">
    <link rel="apple-touch-icon" href="/assets/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link href="/assets/css/main.css" rel="stylesheet">
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-S3NPPQ8B3F"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-S3NPPQ8B3F');
    </script>
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "HealthAndBeautyBusiness",
      "name": "{{ site.name }}",
      "description": "{{ site.description }}",
      "url": "{{ site.url }}",
      "telephone": "{{ site.phone }}",
      "email": "{{ site.email }}",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "{{ site.address }}",
        "addressLocality": "Muzaffarnagar",
        "addressRegion": "Uttar Pradesh",
        "postalCode": "251001",
        "addressCountry": "IN"
      },
      "founder": {
        "@type": "Person",
        "name": "{{ site.author }}",
        "email": "{{ site.email }}"
      },
      "serviceArea": {
        "@type": "Place",
        "name": "India"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Ayurvedic Services",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "{{ site.services.prana_yog.title }}",
              "description": "{{ site.services.prana_yog.description }}"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "{{ site.services.marma_therapy.title }}",
              "description": "{{ site.services.marma_therapy.description }}"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "{{ site.services.ayurveda.title }}",
              "description": "{{ site.services.ayurveda.description }}"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "TouristTrip",
              "name": "{{ site.services.himalayan_tour.title }}",
              "description": "{{ site.services.himalayan_tour.description }}",
              "duration": "P14D"
            }
          }
        ]
      },
      "sameAs": []
    }
    </script>
    
    <style>
        body {
            position: relative;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .site-background {
            background-image: url('/assets/images/back.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.2;
            z-index: -1;
        }
        
        main {
            flex: 1 0 auto;
        }
        
        .content-container {
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 0.375rem;
            padding: 2rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        footer {
            flex-shrink: 0;
        }
        
        @media (max-width: 768px) {
            .content-container {
                background-color: rgba(255, 255, 255, 0.9);
            }
        }
    </style>
</head>
<body class="d-flex flex-column h-100">
    <div class="site-background"></div>
    
    {% include "partials/header.njk" %}
    
    <main class="py-5 flex-shrink-0">
        {{ content | safe }}
    </main>
    
    {% include "partials/footer.njk" %}
    
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom scripts -->
    <script src="/assets/js/main.js"></script>
</body>
</html> 